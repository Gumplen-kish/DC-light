  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "delivery.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    block bread-crumbs
      +bread-crumbs(deliveryBc)
    +img-intro({
      sectionWrap: true,
      title: "Доставка и оплата",
      subTitle:"Быстро и не дорого",
      img: "delivery",
      alt: "Картинка интро страницы", 
      titleDesc: "Доставка",
      textDesc: "В нашем блоге будет много статей об использовании разных типов светильников. Мы расскажем о правилах выбора.",
      btnFirstName: "Скачать реквизиты",
      btnSecondName: "Скачать договор",
      table: true,

    })
    +delivery-slider()
    +img-intro({
      sectionWrap: false,
      img: "payment",
      alt: "Картинка интро оплаты", 
      titleDesc: "Оплата",
      textDesc: "В нашем блоге будет много статей об использовании разных типов светильников. Мы расскажем о правилах выбора.",
      btnFirstName: "Скачать прайс на доставку",
      btnSecondName: "Скачать пример договора",
      table: false,
    })
    +payment-slider()
    +questions("Остались вопросы?", "Напишите нам")
    +recently-card-slider()
    +description({title:"О компании", subTitle:"Мы рады Вам", img:"aboutCompany", alt:"Картинка интро"}).about-company
    +map()

