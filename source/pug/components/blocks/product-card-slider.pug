mixin product-card-slider() 
  .container 
    +section-wrap(`Хиты продаж`,"Популярные товары").product-card-slider
      .product-card-slider__swiper.swiper
        ul.product-card-slider__list.swiper-wrapper
          each elem, index in productDataSliderHit
            li.product-card-slider__item
              +product-small(productDataSlider)



